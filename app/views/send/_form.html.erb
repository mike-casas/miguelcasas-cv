<div>
<%= flash[:notice] %>

<%= form_tag send_path,method: :post  do %>
<div class="form-group">
  <%= label_tag :name,"Nombre" %>
  <%= text_field_tag :name ,nil, class: "form-control" %>
</div>

<div class="form-group">
  <%= label_tag :email, "Email" %>
  <%= text_field_tag :email ,nil, class:"form-control" %>
</div>

<div class="form-group">
  <%= label_tag :subject, "Asunto"  %>
  <%= text_field_tag :subject ,nil , class: "form-control" %>
</div>

<div class="form-group">
<%= label_tag :content, "Contenido"  %>
<%= text_area_tag :content , nil,class: "form-control", rows:"6"%>
</div>
<div class="form-group"><%= submit_tag "guardar" ,class: "btn btn-success"%></div>
<% end %>
</div>



